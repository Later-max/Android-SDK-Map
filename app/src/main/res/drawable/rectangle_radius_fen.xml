<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- 定义填充渐变颜色 -->
    <solid android:color="#99FCFCFC" />
    <!-- 设置内填充 -->
    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />
    <!-- 设置圆角矩形 -->
    <corners android:radius="4dp" />

</shape>